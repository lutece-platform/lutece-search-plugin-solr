<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?><plug-in>

    <!-- Plugin Informations -->
    <name>solr</name>
    <class>fr.paris.lutece.plugins.search.solr.service.SolrPlugin</class>
    <version>3.0.0</version>
    <documentation/>
    <installation/>
    <changes/>
    <user-guide/>
    <description>search.solr.plugin.description</description>
    <provider>search.solr.plugin.provider</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/search/solr_FC.jpg</icon-url>
    <copyright>Copyright 2001-2011 Mairie de Paris</copyright>
    <core-version-dependency>
        <min-core-version>4.9.9</min-core-version>
        <max-core-version/>
    </core-version-dependency>
    <db-pool-required>1</db-pool-required>

    <applications>
        <application>
            <application-id>search-solr</application-id>
            <application-class>fr.paris.lutece.plugins.search.solr.web.SolrSearchApp</application-class>
        </application>
    </applications>

    <admin-features>
        <admin-feature>
            <feature-id>SOLR_INDEX_MANAGEMENT</feature-id>
            <feature-title>search.solr.adminFeature.title</feature-title>
            <feature-description>search.solr.adminFeature.description</feature-description>
            <feature-level>1</feature-level>
            <feature-url>jsp/admin/search/solr/ManageSearchIndexation.jsp</feature-url>
            <feature-icon-url>images/admin/skin/plugins/search/solr_FC.jpg</feature-icon-url>
            <feature-group>SYSTEM</feature-group>
            <feature-documentation-url/>
        </admin-feature>
        <admin-feature>
            <feature-id>SOLR_CONFIGURATION_MANAGEMENT</feature-id>
            <feature-title>search.solr.adminFeature.configuration.title</feature-title>
            <feature-description>search.solr.adminFeature.configuration.description</feature-description>
            <feature-level>1</feature-level>
            <feature-url>jsp/admin/search/solr/ManageSearchConfiguration.jsp</feature-url>
            <feature-icon-url>images/admin/skin/plugins/search/solr_FC.jpg</feature-icon-url>
            <feature-group>SYSTEM</feature-group>
            <feature-documentation-url/>
        </admin-feature>
        <admin-feature>
            <feature-id>SOLR_FIELDS_MANAGEMENT</feature-id>
            <feature-title>search.solr.adminFeature.fields.title</feature-title>
            <feature-description>search.solr.adminFeature.fields.description</feature-description>
            <feature-level>1</feature-level>
            <feature-url>jsp/admin/search/solr/ManageSolrFields.jsp</feature-url>
            <feature-icon-url>images/admin/skin/plugins/search/solr_FC.jpg</feature-icon-url>
            <feature-group>SYSTEM</feature-group>
            <feature-documentation-url/>
        </admin-feature>
    </admin-features>

    <!-- Specific javascripts -->
    <javascript-files>
        <javascript-files-scope>xpage</javascript-files-scope>
        <javascript-file>solr/jquery.autocomplete.js</javascript-file>
    </javascript-files>

    <!-- Specific plugin CSS stylesheets -->
    <css-stylesheets>
        <css-stylesheets-scope>xpage</css-stylesheets-scope>
        <css-stylesheet>solr/jquery.autocomplete.css</css-stylesheet>
    </css-stylesheets>
    
    <daemons>
        <daemon>
            <daemon-id>solrindexer</daemon-id>
            <daemon-name>search.solr.daemon.solrindexer.name</daemon-name>
            <daemon-description>search.solr.daemon.solrindexer.description</daemon-description>
            <daemon-class>fr.paris.lutece.plugins.search.solr.service.daemon.SolrIndexerDaemon</daemon-class>
        </daemon>
    </daemons>

</plug-in>